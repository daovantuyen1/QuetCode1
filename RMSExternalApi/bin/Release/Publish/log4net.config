<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
	</configSections>
	<log4net debug="false">
		<!--RootLog實例，子Log會繼承其特性-->
		<root>
			<!-- ALL, DEBUG, INFO, WARN, ERROR, FATAL, OFF -->
			<level value="ALL" />
			<!--啟用按 Console -->
			<appender-ref ref="ColoredConsoleAppender" />
			<appender-ref ref="LogFileAppenderBySize" />
		
		</root>
		<!--按日誌容量分割日誌文件-->
		<appender name="LogFileAppenderBySize" type="log4net.Appender.RollingFileAppender" >
			<!--<encoding value="utf-8" />-->
			<!--是否續寫-->
			<param name="AppendToFile" value="true" />
			<!--最小鎖定模型以允许多個程序可以寫入同一個文文件-->
			<lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
			<!--StaticLogFileName的值如果為true，則當前日誌文件的文件名只取File參數。如果為false，則文件名取File+DatePattern-->
			<param name="StaticLogFileName" value="true" />
			<!--按照文件的大小進行變換日誌文件-->
			<param name="RollingStyle" value="Size" />
			<param name="File" value="Logs\\application.log" />
			<!--单个文件最大数量 好像只有在 按Size分割时有效-->
			<param name="MaximumFileSize" value="10MB"/>
			<!--保留的log文件數量 超過此數量後自動刪除之前的文件,在按Size分割時有效-->
			<param name="MaxSizeRollBackups" value="10" />
			<!--日誌输出格式-->
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date{yyyy/MM/dd HH:mm:ss.fff} [%-5level] - %message%n"/>
			</layout>
		</appender>
		<!--Console顯示日誌-->
		<appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
			<mapping>
				<level value="ERROR" />
				<foreColor value="White" />
				<backColor value="Red, HighIntensity" />
			</mapping>
			<mapping>
				<level value="WARN"/>
				<!--<foreColor value="Green" />
        <backColor value="yellow, HighIntensity" />-->
				<foreColor value="yellow, HighIntensity" />
			</mapping>
			<mapping>
				<level value="INFO" />
				<foreColor value="White" />
			</mapping>
			<mapping>
				<level value="DEBUG" />
				<foreColor value="Green" />
			</mapping>
			<filter type="log4net.Filter.LevelRangeFilter">
				<param name="LevelMin" value="DEBUG"/>
				<param name="LevelMax" value="ERROR"/>
			</filter>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date{yy/MM/dd HH:mm:ss.fff} [%-5level] - %message%n" />
			</layout>
		</appender>


	</log4net>
</configuration>
